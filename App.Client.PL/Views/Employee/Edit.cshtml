@model Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>

<br />
<br />

<form asp-action="Edit">

	<div class="my-3">
		<label asp-for="Name" class="col-form-label"></label>
		<input asp-for="Name" class="form-control" readonly />
	</div>

	<div class="my-3">
		<label asp-for="Age" class="col-form-label"></label>
		<input asp-for="Age" class="form-control" readonly />
	</div>

	<div class="my-3">
		<label asp-for="Email" class="col-form-label"></label>
		<input asp-for="Email" class="form-control" readonly />
	</div>


	<div class="my-3">
		<label asp-for="Address" class="col-form-label"></label>
		<input asp-for="Address" class="form-control" readonly />
	</div>

	<div class="my-3">
		<label asp-for="Phone" class="col-form-label"></label>
		<input asp-for="Phone" class="form-control" readonly />
	</div>

	<div class="my-3">
		<label asp-for="Salary" class="col-form-label"></label>
		<input asp-for="Salary" class="form-control" readonly />
	</div>


	<div class="my-3">
		<input asp-for="isActive" class="form-check" disabled />
		<label asp-for="isActive" class="col-form-label"></label>
	</div>

	<div class="my-3">
		<input asp-for="isDeleted" class="form-check" disabled />
		<label asp-for="isDeleted" class="col-form-label"></label>
	</div>

	<div class="my-3">
		<label asp-for="HiringDate" class="col-form-label"></label>
		<input asp-for="HiringDate" class="form-control" readonly />
	</div>

	<div class="my-3">
		<label asp-for="CreateAt" class="col-form-label"></label>
		<input asp-for="CreateAt" class="form-control" readonly />
	</div>

	<div class="my-3">
		<input type="submit" value="Save" class="btn btn-primary" />
		<a asp-action="Index" class="btn btn-light">Back to list</a>
	</div>

</form>

